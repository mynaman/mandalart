doctype
html
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        title mandalart
        link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Concert+One')
        link(rel='stylesheet' href='../../css/main.css')
        link(rel='stylesheet' href='../../css/arrow.css')
        script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js')            

    body
        header
         div#head
            h1 Mandalart
            ul
             if user         
                li
                  a#logout(href='/auth/logout') Logout
             else
                li
                  a#sign-in(href='#') Sign in
                li
                  a#sign-up(href='#') Sign up


            div#sign-in-popup
                form(action='/auth/login' method='post')
                    fieldset
                        legend  Mandalart Login
                        label Email :
                            input(type='email' name='email' autocomplete='off')
                        br
                        label Password :
                            input(type='password' name='password')
                        br
                        .error-message= loginError
                        br
                        button#login(type='submit') login
                        button.close close
            
            div#sign-up-popup
                form(action='/auth/join' method='post')
                    fieldset
                        legend Mandalart Join
                        label Email :
                            input(type='email' name='email' autocomplete='off')
                        br
                        label Password:
                            input(type='password' name='password')
                        br
                        label Password_Cofirm :
                            input(type='password' name='passwordConfirm')
                        br
                        .error-message= joinError 
                        br
                        button#join(type='submit') join
                        button.close close

        section#desc
            p 만다라트 훈련 기법 입니다. 
             a(href='https://youtu.be/gmV35b_72j0' target='_blank') 영상-만다라트        
            p 완성도 있는 만다라트 서비스가 되도록 꾸준히 업데이트 하겠습니다          
           
        script.
            $('#join').click((evt)=>{                

                if(!$('#sign-up-popup input[name=email]').val()){
                    evt.preventDefault();
                    alert('아이디를 입력 해 주세요.');
                }
                else if(!$('#sign-up-popup input[name=password]').val()){
                    evt.preventDefault();
                    alert('비밀번호를 입력해주세요.');
                }
                else if(!$('#sign-up-popup input[name=passwordConfirm]').val()){
                    evt.preventDefault();
                    alert('비밀번호 확인의 입력해주세요.');
                } 
                else if ($('#sign-up-popup input[name=password]').val() != $('#sign-up-popup input[name=passwordConfirm]').val()){
                    evt.preventDefault();
                    alert('비밀번호가 맞지 않습니다.');
                }
            });

            $('#login').click((evt)=>{                
                
                if(!$('#sign-in-popup input[name=email]').val()){
                    evt.preventDefault();
                    alert('아이디를 입력 해 주세요.');
                }
                else if(!$('#sign-in-popup input[name=password]').val()){
                    evt.preventDefault();
                    alert('비밀번호를 입력해주세요.');
                }                
            });

        block content


    footer